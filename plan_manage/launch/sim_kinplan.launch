<launch>
    <arg name="odometry_topic" value = "/simulation_generator/odom"/>
    <!-- kindynameic alogoritm -->
    <include file="$(find plan_manage)/launch/algorithm.launch">
        <!-- not using Image and pose -->
        <arg name="cloud_topic" value = "/map_generator/global_cloud"/>
        <arg name="sensor_pose_topic" value="/map_generator/pose"/>
        <arg name="depth_topic" value="depth"/>
        <arg name="odometry_topic" value = "odom"/>
        <!-- simulation opion -->
        <arg name="simulation" value="true"/>
        <arg name="slice_height" value="0.1"/>
        <arg name="kin_horizon" value="5.0"/>
        <!-- map size -->
        <arg name="map_size_x" value="40.0"/>
        <arg name="map_size_y" value="20.0"/>
        <arg name="map_size_z" value=" 5.0"/>
    </include>
    <!-- simulation -->
    <node pkg="tf" type="static_transform_publisher" name="tf_pub" args="0 0 0 0 0 0 1 world base_link 20" />
    <node name="map_pub" pkg="map_generator" type="map_pub" output="log" args=" $(find map_generator)/resource/office3.pcd"/>
    <!-- visualisation -->
    <include file="$(find plan_manage)/launch/rviz.launch">
</launch>